#!/usr/bin/env bash

TELEGRAM_BOT_TOKEN=`jq -cr .secrets.telegram_second.bot_token /etc/secrets/secrets.json`
TELEGRAM_CHAT_ID=`jq -cr .secrets.telegram_second.chat_id /etc/secrets/secrets.json`

NUMBER_OF_TASKS=`sqlite3 /var/lib/kanboard/data/db.sqlite "select count(*) from tasks where (is_active = 0 and date_completed > strftime('%s', 'now', '-21 hours') and project_id != 6) or (date_modification > strftime('%s', 'now', '-24 hours') and project_id = 6)"`

NORMAL_TASKS=`sqlite3 /var/lib/kanboard/data/db.sqlite "select 'â‹… ' || title from tasks where (is_active = 0 and date_completed > strftime('%s', 'now', '-21 hours') and project_id != 6) order by date_due"`
REPEATING_TASKS=`sqlite3 /var/lib/kanboard/data/db.sqlite "select 'â‹… ' || title from tasks where (date_modification > strftime('%s', 'now', '-21 hours') and project_id = 6 and title not like 'ðŸ’Š%') order by date_due"`
OUTSTANDING_TASKS=`sqlite3 /var/lib/kanboard/data/db.sqlite "select 'â‹… ' || strftime('%Y-%m-%d %H:%M', datetime(date_due, 'unixepoch')) || ' ' || title from tasks where (date_due < strftime('%s', 'now', '+72 hours') and project_id = 1 and is_active = 1) order by date_due"`

TEXT="ðŸŽ‰ðŸŽ‰ðŸŽ‰ \\nÐ¡ÐµÐ³Ð¾Ð´Ð½Ñ Ñ Ð²Ñ‹Ð¿Ð¾Ð»Ð½Ð¸Ð» ${NUMBER_OF_TASKS} Ð·Ð°Ð´Ð°Ñ‡:\\n\\nðŸ† ÐžÑÐ½Ð¾Ð²Ð½Ñ‹Ðµ Ð·Ð°Ð´Ð°Ñ‡Ð¸:\\n${NORMAL_TASKS}\\n\\nâ° ÐŸÐ¾Ð²Ñ‚Ð¾Ñ€ÑÑŽÑ‰Ð¸ÐµÑÑ Ð·Ð°Ð´Ð°Ñ‡Ð¸:\\n${REPEATING_TASKS}\\nðŸ“… ÐŸÑ€ÐµÐ´ÑÑ‚Ð¾ÑÑ‰Ð¸Ðµ Ð·Ð°Ð´Ð°Ñ‡Ð¸:\\n${OUTSTANDING_TASKS}\\n\\nÐ¡ÐµÐ³Ð¾Ð´Ð½Ñ Ñ Ð¼Ð¾Ð»Ð¾Ð´ÐµÑ†!"
curl -s -X POST "https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage" \
    -H 'Content-Type: application/json' \
    -d "{ \"chat_id\": \"${TELEGRAM_CHAT_ID}\", \"text\": \"${TEXT}\" }"
