{
  "checks_templates": [
    {
      "name": "dav_https",
      "state": "present",
      "plugin": "check_https_certificate",
      "type": "alert",
      "argument": "dav.rcmd.space",
      "interval": 10,
      "description": "Radicale SSL certificate",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "provisioning",
      "state": "present",
      "plugin": "check_file",
      "type": "alert",
      "argument": "/etc/default/earlystageconfigs",
      "interval": 1,
      "description": "Provisioning file",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "site_https",
      "state": "present",
      "plugin": "check_https_certificate",
      "type": "alert",
      "argument": "rcmd.space",
      "interval": 10,
      "description": "Main Website SSL certificate",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "blog_https",
      "state": "present",
      "plugin": "check_https_certificate",
      "type": "alert",
      "argument": "blog.rcmd.space",
      "interval": 10,
      "description": "Blog Website SSL certificate",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "transmission_https",
      "state": "absent",
      "plugin": "check_https_certificate",
      "type": "alert",
      "argument": "transmission.it-the-drote.tk",
      "interval": 10,
      "description": "Transmission SSL certificate",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "xmpp_server_ssl",
      "state": "present",
      "plugin": "check_xmpp_certificate",
      "type": "alert",
      "argument": "it-the-drote.tk",
      "interval": 10,
      "description": "XMPP server TLS certificate",
      "environment": "external",
      "notify": "telegram"
    },
    {
      "name": "xmpp_server_alive",
      "state": "present",
      "plugin": "check_systemd_service",
      "type": "alert",
      "argument": "prosody.service",
      "interval": 1,
      "description": "XMPP server",
      "environment": "external",
      "notify": "telegram"
    },
    {
      "name": "postfix_alive",
      "state": "present",
      "plugin": "check_systemd_service",
      "type": "alert",
      "argument": "postfix.service",
      "interval": 1,
      "description": "Postfix",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "kernel_version",
      "state": "present",
      "plugin": "check_kernel_version",
      "type": "alert",
      "argument": "",
      "interval": 480,
      "description": "Linux Kernel Version",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "free_space",
      "state": "present",
      "plugin": "check_disk_space",
      "type": "alert",
      "argument": "/dev/vda1",
      "interval": 3,
      "description": "Free space on disk",
      "environment": "external",
      "notify": "telegram"
    },
    {
      "name": "api_website",
      "state": "present",
      "plugin": "check_http_ping",
      "type": "alert",
      "argument": "https://api.rcmd.space/v4/healthcheck",
      "interval": 1,
      "description": "RCMD API website",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "api_https",
      "state": "present",
      "plugin": "check_https_certificate",
      "type": "alert",
      "argument": "api.rcmd.space",
      "interval": 10,
      "description": "API HTTPS certificate",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "traccar",
      "state": "present",
      "plugin": "check_traccar_logs",
      "type": "alert",
      "argument": "TRACCAR_DEVICE_ID",
      "interval": 10,
      "description": "Check traccar reported location",
      "environment": "internal",
      "notify": "traccar"
    },
    {
      "name": "caldav_backups",
      "state": "absent",
      "plugin": "check_duplicity_backup",
      "type": "alert",
      "argument": "file:///var/storage/wastebox/Backups/radicale/",
      "interval": 1440,
      "description": "CalDAV backups",
      "environment": "internal",
      "notify": "telegram"
    },
    {
      "name": "website_backups",
      "state": "absent",
      "plugin": "check_duplicity_backup",
      "type": "alert",
      "argument": "file:///var/storage/wastebox/Backups/websites/",
      "interval": 1440,
      "description": "Website backups",
      "environment": "internal",
      "notify": "telegram"
    }
  ]
}
